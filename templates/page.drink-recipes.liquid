<div class="banner" style="background:url({{ 'recipes_drink_bg.jpg' | asset_url }}); background-size:cover; background-position:center;">
	<div class="copy">
		<div class="inner">
			<h1>{{ pages.recipes-all-drinks.content }}</h1>
		</div>
	</div>
</div>

<div class="container">
	<div class="row recipes-row single">
		<div class="columns large-12"></div>
		{% for article in blogs.drink-recipes.articles %}
      {% if article.content contains "<img" %}
        {% assign src = article.content | split: 'src="' %}
        {% assign src = src[1] | split: '"' | first | replace: '//cdn', 'http://cdn'; | replace: 'http:http://';, 'http://'; | remove: 'https:' %}
      {% endif %}
      <div class="columns small-12 large-4 recipe-block">
        {{ src | img_tag }}
        <h1>{{ article.title }}</h1>
        <p>{{ article.excerpt }}</p>
        <a href="#">View more...</a>
      </div>
    {% endfor %}
	</div>
</div>