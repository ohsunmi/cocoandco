<div class="banner" style="background:url({{ 'tikicarts_bg.jpg' | asset_url }}); background-size:cover; background-position:center;">
	<div class="copy">
		<div class="inner">
			<h1>{{ pages['tiki-carts'].metafields.c_f.section_title }}</h1>
			<h5>{{ pages['tiki-carts'].content }}</h5>
		</div>
	</div>
</div>

<div class="container">
	<div class="line">
		<div class="columns large-5 margin-bottom">
			{{ 'tikicarts_img_1.jpg' | asset_url | img_tag }}
		</div>
		<div class="columns large-7">
			<p>{{ pages['tiki-carts-copy'].content }}</p>
		</div>
	</div>

	<div class="line">
		<div class="columns large-12">
			<h2>{{ pages['private-events'].metafields.c_f.section_title }}</h2>
			<p>{{ pages['private-events'].content }}</p>
		</div>
	</div>
</div>

<div class="slider">
	<div class="prevControl controls">{{ 'prev_arrow_light.png' | asset_url | img_tag }}</div>
	<div class="nextControl controls">{{ 'next_arrow_light.png' | asset_url | img_tag }}</div>

<div class="cycle-slideshow"
    data-cycle-fx="scrollHorz"
    data-cycle-pause-on-hover="true"
    data-cycle-speed="200"
    data-cycle-prev=".prevControl"
    data-cycle-next=".nextControl"
    >
		{{ 'tikicarts_slider_1.jpg' | asset_url | img_tag }}
		{{ 'tikicarts_slider_2.jpg' | asset_url | img_tag }}
		{{ 'tikicarts_slider_3.jpg' | asset_url | img_tag }}
	</div>
</div>