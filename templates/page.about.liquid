<div class="banner" style="background:url({{ 'about_bg.jpg' | asset_url }}); background-size:cover; background-position:center;">
	<div class="copy">
		<div class="inner">
			<h1>{{ pages['our-story'].metafields.c_f.section_title }}</h1>
			<h5>{{ pages['our-story'].content }}</h5>
		</div>
	</div>
</div>

<div class="container">
	<div class="line">
		<div class="intro columns large-12">
			<p>{{ pages['our-story-intro'].content }}</p>
		</div>
	</div>
	<div class="line">
		<div class="columns large-5">
			{{ 'about_img1.jpg' | asset_url | img_tag }}
		</div>
		<div class="quote-line columns large-7">
			<h1>{{ pages['our-story-quote-1'].content }}</h1>
			<p class="quote">{{ pages['our-story-quote-1'].metafields.c_f.our_story_quote_author }}</p>
		</div>
	</div>
	<div class="line">
		<div class="columns large-7">
			<p>{{ pages['our-story-description'].content }}</p>
			<div class="contact">
				<p class="name">{{ pages['our-story-description'].metafields.c_f.our_story_name_1 }}</p>
				<p class="email"><a href="mailto:{{ pages['our-story-description'].metafields.c_f.our_story_email_1 }}">{{ pages['our-story-description'].metafields.c_f.our_story_email_1 }}</a></p>
			</div>
			<div class="contact">
				<p class="name">{{ pages['our-story-description'].metafields.c_f.our_story_name_2 }}</p>
				<p class="email"><a href="mailto:{{ pages['our-story-description'].metafields.c_f.our_story_email_2 }}">{{ pages['our-story-description'].metafields.c_f.our_story_email_2 }}</a></p>
			</div>
		</div>
		<div class="columns large-5">
			{{ 'about_img2.jpg' | asset_url | img_tag }}
		</div>
	</div>
</div>

<div class="slider">
	<div class="prevControl controls">{{ 'prev_arrow_dark.png' | asset_url | img_tag }}</div>
	<div class="nextControl controls">{{ 'next_arrow_dark.png' | asset_url | img_tag }}</div>

	<div class="cycle-slideshow"
    data-cycle-fx="scrollHorz"
    data-cycle-pause-on-hover="true"
    data-cycle-speed="200"
    data-cycle-prev=".prevControl"
    data-cycle-next=".nextControl"
    >
		{{ 'about_slider_1.jpg' | asset_url | img_tag }}
		{{ 'about_slider_2.jpg' | asset_url | img_tag }}
		{{ 'about_slider_3.jpg' | asset_url | img_tag }}
	</div>
</div>